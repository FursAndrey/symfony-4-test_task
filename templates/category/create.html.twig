{% extends 'base.html.twig' %}

{% block body %}

    {{ form_start(form) }}
    <div class="form-group">
        {{ form_label(form.name, 'Название категории', {'label_attr': {'class': 'text-success p-3 h5' }}) }}
        {{ form_errors(form.name) }}
        {{ form_widget(form.name, { 'attr': {'class': 'form-control'} }) }}
        {{ form_help(form.name) }}
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">{{ sendBtn }}</button>
        <a href="{{ path('category_page') }}" class="btn btn-primary">{{ returnBtn }}</a>
    </div>
    {{ form_end(form) }}

{% endblock %}