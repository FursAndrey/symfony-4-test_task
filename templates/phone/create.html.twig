{% extends 'base.html.twig' %}

{% block body %}

    <p>{{ error }}</p>

    {{ form_start(form) }}
    {% block createuser %}{% endblock %}

    <div class="form-group">
        {{ form_label(form.phonenumber, 'Номер телефона', {'label_attr': {'class': 'text-success p-3 h5' }}) }}
        {{ form_errors(form.phonenumber) }}
        {{ form_widget(form.phonenumber, { 'attr': {'class': 'form-control'} }) }}
        {{ form_help(form.phonenumber) }}
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">{{ sendBtn }}</button>
        <a href="{{ path('user_page') }}" class="btn btn-primary">{{ returnBtn }}</a>
    </div>
    {{ form_end(form) }}

{% endblock %}